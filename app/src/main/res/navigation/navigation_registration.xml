<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_registration"
    app:startDestination="@id/upload_reports_screen">


    <fragment
        android:id="@+id/create_patient_screen"
        android:label="create_patient"
        android:name="org.myf.ahc.ui.registration.createPatient.CreatePatientScreen"
        tools:layout="@layout/screen_create_patient">
        <action
            android:id="@+id/action_navigate_to_verify"
            app:destination="@id/verify_screen"/>
    </fragment>


    <fragment
        android:id="@+id/verify_screen"
        android:label="verify_screen"
        tools:layout="@layout/fragment_verify"
        android:name="org.myf.ahc.ui.registration.verify.VerifyFragment">
        <action
            android:id="@+id/action_navigate_to_upload_reports"
            app:destination="@id/upload_reports_screen"/>
    </fragment>

    <fragment
        android:id="@+id/upload_reports_screen"
        tools:layout="@layout/screen_upload_reports"
        android:label="upload_reports"
        android:name="org.myf.ahc.ui.registration.reports.UploadReportsScreen"/>
</navigation>