<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="org.myf.demo.feature.registration.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_registration_layout">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/steps_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/steps_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/steps_title"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/heart_step_one"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/steps_title_tv"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/step_one_title"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:gravity="center"
                    android:text="@string/one_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_one"
                    app:layout_constraintEnd_toEndOf="@+id/heart_step_one"
                    app:layout_constraintStart_toStartOf="@+id/heart_step_one"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_one" />

                <TextView
                    android:id="@+id/step_one_message_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/step_one_message"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_one"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/heart_step_one"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_one" />

                <ImageView
                    android:id="@+id/heart_step_two"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heart_step_one"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/step_two_title"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:gravity="center"
                    android:text="@string/two_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_two"
                    app:layout_constraintEnd_toEndOf="@+id/heart_step_two"
                    app:layout_constraintStart_toStartOf="@+id/heart_step_two"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_two" />

                <TextView
                    android:id="@+id/step_two_message_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/step_two_message"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_two"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/heart_step_two"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_two" />

                <ImageView
                    android:id="@+id/heart_step_three"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_margin="16dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_heart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/heart_step_two"
                    app:layout_constraintVertical_bias="0" />

                <TextView
                    android:id="@+id/step_three_title"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:gravity="center"
                    android:text="@string/three_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_three"
                    app:layout_constraintEnd_toEndOf="@+id/heart_step_three"
                    app:layout_constraintStart_toStartOf="@+id/heart_step_three"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_three" />

                <TextView
                    android:id="@+id/step_three_message_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:text="@string/step_three_message"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:layout_constraintBottom_toBottomOf="@+id/heart_step_three"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/heart_step_three"
                    app:layout_constraintTop_toTopOf="@+id/heart_step_three" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>



        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/log_in_button"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="48dp"
                android:layout_weight="1"
                android:backgroundTint="?attr/colorTertiary"
                android:minHeight="@dimen/button_min_height"
                android:text="@string/log_in_title"
                android:textAllCaps="false"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/register_button"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/register_button"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:layout_weight="1"
                android:minHeight="@dimen/button_min_height"
                android:text="@string/register_title"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>